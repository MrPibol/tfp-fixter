<br />
<div class ="container booyah-box col-10 offset-1">
    <div class="row">
        <div class="col-10">
            <h1><%= current_lesson.title %></h1>
        </div>
    </div>
    <!--<div class="container">-->
        <div class="row align-items-start">
            <div class="col-auto mr-auto">
                <p><%= current_lesson.subtitle %></p>
            </div>
            <div class="col-auto next-lesson">
                <% if current_lesson.next_lesson.present? %>
                    <%= link_to  lesson_path(current_lesson.next_lesson), class: 'btn btn-default' do  %>    
                        Next Lesson &nbsp;
                        <span class="fa fa-forward"></span>
                    <% end %>
                <% end %>

            </div>
        </div>
    <!--</div>-->
    <br class="clr" />
    
    <video id="my-video" class="video-js vjs-big-play-centered vjs-fluid video-box" controls preload="auto"  
    poster=" <%=image_path('black.jpg')%>" data-setup="{}"> 
        <source src="<%= current_lesson.video.to_s%>" type='video/mp4'> 
        <!--<source src="MY_VIDEO.webm" type='video/webm'> -->
        <noscript>
            <p class="vjs-no-js"> 
                To view this video please enable JavaScript, and consider upgrading to a web browser that 
                <a href="http://videojs.com/html5-video-support/" target="_blank">supports HTML5 video</a> 
            </p> 
        </noscript>    
    </video>
</div>
    