<br />
<div class="booyah-box col-10 offset-1">
    <h1 class="text-center"><%= @course.title %></h1>
    <h1 class="text-center">SHOW PAGE - Instructor/Courses</h1>
    <br />
    <%= link_to 'Preview As Student...', course_path(@course.id), class: 'btn btn-warning float-right' %>
    <br class="clr" />
    
    <div class="text-center">
        <%= link_to 'Add a new section...', new_instructor_course_section_path(@course.id), class: 'btn btn-primary btn-lg' %>
    </div>

  
    <ul>
        <% @course.sections.each do |section| %>
          <li>
            <%= section.title %>
          </li>
        <% end %>
    </ul>

</div>


