<br />

<div class="booyah-box col-10 offset-1">
  <div class="index-box">
  <h1 class="text-center">Learn something today</h1>
  <hr />
  
  <% @courses.each do |course| %>
      <h3 class='text.center'>
        <%= link_to course.title, course_path(course.id)%>
      </h2>
      <br />
      
      <div class="row align-items-start">
          <div class='col-sm-8 col-12'>
              <%= course.description %>
              <%= image_tag course.image, class:'img-fluid' %>
          </div>
        
          <div class='col-sm-4 col-12 text-center'>
              <%= link_to 'Button', course_path(course.id), class: 'btn btn-primary btn-large' %>        
          </div>
      </div>
      <br class="clr" />
  <% end %>
         
</div>
