<br />
<div class ="booyah-box col-10 offset-1">
    <h1><%= @course.title %></h1>
    <br />
    <div class="row">
        <div class="col-sm-4 col-12 text-center">
            <span class="badge badge-default">
                <%= number_to_currency(@course.cost) %>
            </span>
            
            <% if current_user && current_user == @course.user %>
                    <br />
                    <br />
                    <%= link_to 'Administer', instructor_course_path(@course.id), class:'btn btn-primary'%>
            <% end %>
                    <br />
                    <br />
            <% if current_user %>
                <% if current_user.enrolled_in?(@course) %>
                    <h3 class="badge badge-info">You Are Enrolled!</h3>
                <%else%>
                    <% if @course.free? %>
                        <%= link_to 'Enroll', course_enrollments_path(@course.id), class:'btn btn-primary', method: :post %>
                    <% else %>
                      <!--Stripe code-->
                      <%= form_tag course_enrollments_path(@course) do %>
                      <br />
                          <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                                  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                                  data-email ="<%= current_user.email%>"
                                  data-description="<%= @course.title %>(<%= number_to_currency @course.cost%>)"
                                  data-amount="<%=(@course.cost*100).to_i%>"
                                  data-locale="auto"></script>
                       <% end %>
                       <!--Stripe code-->
                    <% end %>
                <% end %>
            <% else %>
                    <h3 class="badge badge-info">Sign In to Enroll!</h3>
            <% end %>
        </div>
        <br class="clr" />
        <div class="col-sm-8 col-12">
            <%= @course.description %>
            <%= image_tag @course.image, class:'img-fluid'%>
        </div>
    </div>
    <br class="clr" />
    <br />
    <div class="col-12">
        <!--<div class="booyah-box col-8 offset-1">-->
            <% @course.sections.rank(:row_order).each do |section| %>
                <div class="section">
                    <br />
                    <h3>
                        <%= section.title %>
                    </h3>
                    <!--<br class="clr" />-->
                    <br />
                    <div class="row">
                        <% section.lessons.rank(:row_order).each do |lesson| %>
                           <div class="col-12 col-sm-6">
                                <div class="lesson text-center">
                                    <%= link_to lesson_path(lesson) do %>
                                        <b><%= lesson.title %></b>
                                        -
                                        <%= lesson.subtitle %>
                                    <%end%>
                                </div>
                            </div>
                        <% end %>
                    </div>
                    <br class="clr" />
                </div>
            <% end %>
        <!--</div>-->
        
    </div>
</div>